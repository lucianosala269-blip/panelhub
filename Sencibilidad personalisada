    <script>
        function generarSensibilidad() {
            const tipo = document.getElementById('tipoDispositivo').value;
            const modelo = document.getElementById('modeloDispositivo').value;
            const disparo = document.getElementById('posicionDisparo').value;
            const estilo = document.getElementById('estiloJuego').value;

            let baseGen = 0, baseMira = 0, ajusteDisp = 0;

            switch(modelo) {
                case "iphone15": baseGen = 45; baseMira = 38; break;
                case "iphone14": baseGen = 43; baseMira = 36; break;
                case "android_low": baseGen = 50; baseMira = 42; break;
                case "android_medium": baseGen = 47; baseMira = 40; break;
                case "android_high": baseGen = 44; baseMira = 37; break;
                case "moto_g": baseGen = 48; baseMira = 41; break;
                case "moto_edge": baseGen = 45; baseMira = 39; break;
                case "samsung_s26": baseGen = 46; baseMira = 38; break;
                case "xiaomi_14": baseGen = 45; baseMira = 37; break;
                case "pc_bluestacks": baseGen = 32; baseMira = 28; break;
                default: baseGen = 45; baseMira = 38;
            }

            switch(disparo) {
                case "izquierdo_abajo": ajusteDisp = -2; break;
                case "derecho_medio": ajusteDisp = +1; break;
                case "personalizado": ajusteDisp = +2; break;
                default: ajusteDisp = 0;
            }

            let gen, mira, doble, cuadruple, ocho, nocturna;
            switch(estilo) {
                case "rush":
                    gen = baseGen + ajusteDisp + 3;
                    mira = baseMira + ajusteDisp + 2;
                    doble = 35 + ajusteDisp;
                    cuadruple = 28 + ajusteDisp;
                    ocho = 18 + ajusteDisp;
                    nocturna = 40 + ajusteDisp;
                    break;
                case "sniper":
                    gen = baseGen + ajusteDisp - 2;
                    mira = baseMira + ajusteDisp - 3;
                    doble = 25 + ajusteDisp;
                    cuadruple = 18 + ajusteDisp;
                    ocho = 10 + ajusteDisp;
                    nocturna = 30 + ajusteDisp;
                    break;
                case "support":
                    gen = baseGen + ajusteDisp;
                    mira = baseMira + ajusteDisp;
                    doble = 30 + ajusteDisp;
                    cuadruple = 23 + ajusteDisp;
                    ocho = 14 + ajusteDisp;
                    nocturna = 35 + ajusteDisp;
                    break;
                case "competitivo":
                    gen = baseGen + ajusteDisp + 1;
                    mira = baseMira + ajusteDisp;
                    doble = 32 + ajusteDisp;
                    cuadruple = 25 + ajusteDisp;
                    ocho = 16 + ajusteDisp;
                    nocturna = 37 + ajusteDisp;
                    break;
            }

            document.getElementById('general').textContent = gen;
            document.getElementById('mira').textContent = mira;
            document.getElementById('doble').textContent = doble;
            document.getElementById('cuadruple').textContent = cuadruple;
            document.getElementById('ocho').textContent = ocho;
            document.getElementById('nocturna').textContent = nocturna;
            document.getElementById('resultado').style.display = "block";
        }
    </script>
